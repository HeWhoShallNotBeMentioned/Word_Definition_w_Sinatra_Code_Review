<h1>Add a definition to <%= @word %></h1>

<ul><% @word.definitions().each() do |definition| %>
  <li><%= definition.definition_entry() %> <a href='/definitions/<%= definition.id() %>/delete' claass = "remover"> Delete!</a></li>
  <% end %>
</ul>

<form action="/individual_word" method="post">

  <input id='id' name='id' type='hidden' value='<%= @word.id() %>'>

  <label for="definition">Definition:</label>
  <input id="definition" name="definition" type="text">

  <button type="submit">Add definition</button>
</form>
